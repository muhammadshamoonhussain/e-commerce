{
  "version": 2,
  "builds": [
    {
      "src": "db.json",
      "use": "@vercel/static"
    },
    {
      "src": "dist/**/*", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/db.json"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
